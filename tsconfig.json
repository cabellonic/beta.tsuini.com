{
	"compilerOptions": {
		"baseUrl": "./src",
		"paths": {
			"@layout/*": ["layout/*"],
			"@components/*": ["common/components/*"],
			"@hooks/*": ["common/hooks/*"],
			"@svg/*": ["common/svg/*"],
			"@models/*": ["app/models/*"],
			"@modules/*": ["modules/*"],
			"@styles/*": ["app/styles/*"]
		},
		"target": "es5",
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"noEmit": true,
		"esModuleInterop": true,
		"module": "esnext",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"incremental": true
	},
	"include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
	"exclude": ["node_modules"]
}
